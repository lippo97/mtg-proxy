import { FC, useState } from 'react';
import './NumericCounter.css'; // Import your CSS file for styling

const NumericCounter: FC = () => {
  const [count, setCount] = useState(0);

  const decrement = () => {
    setCount(count - 1);
  };

  const increment = () => {
    setCount(count + 1);
  };

  return (
    <div className="numeric-counter">
      <button className="triangle-button" onClick={decrement}>
        <span className="triangle-left"></span>
      </button>
      <span className="count-label">{count}</span>
      <button className="triangle-button" onClick={increment}>
        <span className="triangle-right"></span>
      </button>
    </div>
  );
};

export default NumericCounter;
